cat > .gitignore <<'EOF'
# Node
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
package-lock.json.LOCK

# Mac / OS clutter
.DS_Store
.AppleDouble
.LSOverride

# Editor / tooling
.vscode/
.idea/
*.swp

# Builds / caches
dist/
build/
.cache/
.next/
out/

# Local artifacts / temp
*.local.*
*.tmp
*.log
accepted:1
skipped:0
total:1

# Do NOT commit generated vendor/compressed assets unless intended
public/*.min.*
EOF